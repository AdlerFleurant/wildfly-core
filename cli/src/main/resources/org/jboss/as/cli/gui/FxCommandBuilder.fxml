<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jboss.as.cli.gui.FxManagementModel">
  <children>
    <Label text="Right-click a node to choose an operation.  Close/Open a folder to refresh.  Hover for help."
           VBox.vgrow="NEVER"/>
    <TreeView prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" fx:id="managementTreeView" showRoot="false" />
    <HBox spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label text="Filter:"/>
        <TextField prefColumnCount="30" fx:id="filterTextField" />
        <Button mnemonicParsing="false" text="Clear" onAction="#clearFilterText">
          <tooltip>
            <Tooltip text="Clear the filter"/>
          </tooltip>
        </Button>
      </children>
    </HBox>
  </children>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>
</VBox>
