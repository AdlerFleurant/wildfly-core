<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.jboss.as.cli.gui.FxServerLogsPanel">
    <TableView fx:id="serverLogsTableView" onMouseClicked="#doubleClick" prefWidth="800.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="filenameColumn" text="File"/>
            <TableColumn fx:id="lastModifiedColumn" text="Last Modified"/>
            <TableColumn fx:id="sizeColumn" text="Size"/>
        </columns>
        <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox alignment="CENTER" spacing="5.0">
        <padding>
            <Insets bottom="5.0" top="5.0"/>
        </padding>
        <Button mnemonicParsing="false" text="Download" disable="true" fx:id="downloadButton" onAction="#downloadDialog"/>
        <Button mnemonicParsing="false" onAction="#refresh" text="Refresh List"/>
    </HBox>
</VBox>
